<button class="btn btn-info btn-block b" data-toggle="modal" data-target="#myModal">Add Category</button>
<div>
	<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Category</th>
      <th>Products count</th>
      <th>To Products</th>
    </tr>
  </thead>

  <tbody>
		<% @categories.each do |c| %>
      <tr>
        <td><%= c.title %></td>
        <td><%= c.products.count%></td>
        <td><%= link_to 'to products', category_products_path(c) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

 <!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
      <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="btn btn-default pull-right" data-dismiss="modal">x</button>
        <%= render 'categories/create' %>
      </div>
    </div>
  </div>
</div>