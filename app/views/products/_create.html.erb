<%= form_for @product, url: category_products_path(params[:category_id]) do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name, placeholder: "Product name" %><br>
	<%= f.label :description %><br>
	<%= f.text_area :description, class: "form-control", row: 3, placeholder: "Maximum 200 symbols" %>
	<%= f.label :image %><br>
	<%= f.file_field :image %>
	<%= f.submit "Add product" %>
<% end %>
