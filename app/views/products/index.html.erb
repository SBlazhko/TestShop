<button class="btn btn-success btn-block b" data-toggle="modal" data-target="#myModal">Add product</button>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
      <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn btn-default pull-right" data-dismiss="modal">x</button>
        <h3>New product form</h3>
      </div>
      <div class="modal-body">
        <%= render 'products/create' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
<% @products.each do |p| %>
  <div class="col-sm-4 col-md-3">
    <div class="thumbnail">
     	<%= image_tag p.image.url(:medium) %>
      <div class="caption">
				<h3 class="text-center"><%= p.name %></h3>
        <%= link_to "More", category_product_path(params[:category_id], p.id), class: "btn btn-primary" %>
        <%if p.user_id == current_user.id %>
          <%= link_to "Delete", category_product_path(params[:category_id], p.id), method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>

